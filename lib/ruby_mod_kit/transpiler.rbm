# frozen_string_literal: true

# rbs_inline: enabled

require "ruby_mod_kit/context"

module RubyModKit
  # The class of transpiler.
  class Transpiler
    # @rbs src: String
    # @rbs return: void
    def initialize(@src)
    end

    # @rbs return: String
    def transpile
      context = Context.new(@src)
      until context.completed?
        context.resolve
        context = context.generate_next
      end
      context.script
    end
  end
end
